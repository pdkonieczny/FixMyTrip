<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">

    <ImageView android:id="@+id/update_list_Icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="left|center_vertical"
               android:layout_alignParentTop="true"
               android:src="@drawable/ic_access_time_black_18dp"
               android:layout_marginRight="15dp"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp" />
    <TextView android:id="@+id/update_list_Title"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="left|center_vertical"
              android:layout_alignParentTop="true"
              android:layout_toRightOf="@id/update_list_Icon"
              android:textStyle="bold"
              android:textSize="15dp"
              android:text="UPDATE: Late 15 mins"
              android:textColor="@color/Black"
              android:layout_marginTop="1dp"/>

    <TextView android:id="@+id/update_list_Body"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="left|center_vertical"
              android:layout_below="@id/update_list_Title"
              android:layout_toRightOf="@id/update_list_Icon"
              android:textSize="12dp"
              android:text="REASON: signal issues     STATION: Mangonia Park"
              android:textColor="@color/Black"
              android:layout_marginTop="1dp"/>

</RelativeLayout>